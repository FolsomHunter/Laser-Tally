<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="600dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#CFCFCF"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.yaboosh.ybtech.lasertally.TallyDeviceConnectionStatusMessageActivity"
    android:gravity="center" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="125dp"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp"
        android:gravity="center" >

        <ProgressBar
            android:id="@id/tallyDeviceConnectionStatusMessageProgressBar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@android:style/Widget.ProgressBar.Large"
            android:gravity="center"
            android:visibility="visible" />

        <View
            android:id="@id/tallyDeviceConnectionStatusMessageGreenCheckMark"
            android:background="@drawable/green_check_mark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone">
        </View>

    </LinearLayout>

    <TextView
        android:id="@id/tallyDeviceConnectionStatusMessageTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="#000000"
        android:text="Connecting..." />

</LinearLayout>