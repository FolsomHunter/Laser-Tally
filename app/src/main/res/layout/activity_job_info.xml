            </LinearLayout>

        </LinearLayout>
        <!-- END OF JOB INFO LAYOUT -->

    </ScrollView>
    <!-- END OF JOB INFO SCROLLVIEW -->

</RelativeLayout>
<!-- END OF MAIN LAYOUT -->