<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#808080"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.yaboosh.lasertally.development.main.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

        <Button
            android:background="@drawable/white_styled_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="create new job"
            android:textSize="@dimen/text_size_normal"
            style="@style/whiteStyledButton"
            android:onClick="handleCreateNewJobButtonPressed" />

        <!-- vertical spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="50dp" >
        </View>

        <Button
            android:background="@drawable/white_styled_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open existing job"
            android:textSize="@dimen/text_size_normal"
            style="@style/whiteStyledButton"
            android:onClick="handleOpenAnExistingJobButtonPressed" />

</LinearLayout>